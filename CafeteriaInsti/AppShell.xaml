<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CafeteriaInsti.Views"
       x:Class="CafeteriaInsti.AppShell"
       Title="Cafetería Insti">

    <TabBar>
        <ShellContent Title="Menú"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate views:ListaProductosPage}"
                      Route="ListaProductosPage" />

        <ShellContent Title="Favoritos"
                      Icon="heart.png"
                      ContentTemplate="{DataTemplate views:FavoritosPage}"
                      Route="FavoritosPage" />

        <ShellContent Title="Carrito"
                      Icon="cart.png"
                      ContentTemplate="{DataTemplate views:CarritoPage}"
                      Route="CarritoPage" />

        <ShellContent Title="Pedidos"
                      Icon="list.png"
                      ContentTemplate="{DataTemplate views:HistorialPedidosPage}"
                      Route="HistorialPedidosPage" />
    </TabBar>

</Shell>


