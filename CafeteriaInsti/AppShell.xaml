<?xml version="1.0" encoding="UTF-8" ?>
<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:CafeteriaInsti.Views"
       x:Class="CafeteriaInsti.AppShell"
       Title="Cafetería Insti">

    <!-- Login como página principal con RegisterPage como ruta relativa -->
    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate views:LoginPage}" />

    <!-- Navegación principal después del login -->
    <TabBar x:Name="MainTabBar" IsVisible="False">
        <ShellContent Title="Menú"
                      Icon="home.png"
                      ContentTemplate="{DataTemplate views:ListaProductosPage}"
                      Route="ListaProductosPage" />

        <ShellContent Title="Carrito"
                      Icon="cart.png"
                      ContentTemplate="{DataTemplate views:CarritoPage}"
                      Route="CarritoPage" />
    </TabBar>

</Shell>

