<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CafeteriaInsti.ViewModels"
             xmlns:models="clr-namespace:CafeteriaInsti.Models"
             x:DataType="viewModels:FavoritosViewModel"
             x:Class="CafeteriaInsti.Views.FavoritosPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="*,Auto">
        
        <!-- Lista de favoritos -->
        <CollectionView Grid.Row="0" 
                        ItemsSource="{Binding ProductosFavoritos}"
                        SelectionMode="None"
                        Margin="10">
            
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" 
                                Span="2" 
                                HorizontalItemSpacing="10" 
                                VerticalItemSpacing="10"/>
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Producto">
                    <Frame Padding="0" 
                           CornerRadius="20" 
                           HasShadow="True"
                           BackgroundColor="White"
                           Margin="5">
                        <Frame.Shadow>
                            <Shadow Brush="Black"
                                    Opacity="0.15"
                                    Radius="15"
                                    Offset="0,5"/>
                        </Frame.Shadow>
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer 
                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:FavoritosViewModel}}, Path=GoToDetailsCommand}"
                                CommandParameter="{Binding .}"/>
                        </Frame.GestureRecognizers>

                        <Grid RowDefinitions="160,Auto,Auto,Auto" Padding="0">
                            
                            <!-- Contenedor de imagen -->
                            <Grid Grid.Row="0">
                                <BoxView BackgroundColor="#F5F5F5"/>
                                <Image Source="{Binding UrlImagen}"
                                       Aspect="AspectFill"
                                       HeightRequest="160"
                                       WidthRequest="200"/>
                                <BoxView>
                                    <BoxView.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="Transparent" Offset="0.0"/>
                                            <GradientStop Color="#20000000" Offset="1.0"/>
                                        </LinearGradientBrush>
                                    </BoxView.Background>
                                </BoxView>
                            </Grid>

                            <!-- Boton quitar de favoritos - ROJO porque está en favoritos -->
                            <Frame Grid.Row="0"
                                   BackgroundColor="White"
                                   Padding="0"
                                   CornerRadius="22"
                                   HasShadow="False"
                                   WidthRequest="44"
                                   HeightRequest="44"
                                   HorizontalOptions="Start"
                                   VerticalOptions="Start"
                                   Margin="10">
                                <Frame.Shadow>
                                    <Shadow Brush="Black"
                                            Opacity="0.15"
                                            Radius="8"
                                            Offset="0,2"/>
                                </Frame.Shadow>
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer 
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewModels:FavoritosViewModel}}, Path=QuitarDeFavoritosCommand}"
                                        CommandParameter="{Binding .}"/>
                                </Frame.GestureRecognizers>
                                <!-- Corazon ROJO porque está en favoritos -->
                                <Label Text="?"
                                       FontSize="22"
                                       TextColor="#E91E63"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       VerticalOptions="Center"
                                       HorizontalTextAlignment="Center"
                                       VerticalTextAlignment="Center"
                                       Margin="0"/>
                            </Frame>

                            <!-- Badge de categoria -->
                            <Frame Grid.Row="0" 
                                   BackgroundColor="#512BD4"
                                   Padding="10,5"
                                   CornerRadius="12"
                                   HasShadow="False"
                                   HorizontalOptions="End"
                                   VerticalOptions="Start"
                                   Margin="10">
                                <Label Text="{Binding Categoria}" 
                                       FontSize="10"
                                       FontAttributes="Bold"
                                       TextColor="White"/>
                            </Frame>

                            <!-- Contenido -->
                            <VerticalStackLayout Grid.Row="1" 
                                                Padding="15,12"
                                                Spacing="8">
                                
                                <Label Text="{Binding Nombre}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1A1A1A"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"
                                       HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center"/>

                                <Label Text="{Binding Descripcion}"
                                       FontSize="12"
                                       TextColor="#666666"
                                       LineBreakMode="TailTruncation"
                                       MaxLines="2"
                                       HorizontalOptions="Center"
                                       HorizontalTextAlignment="Center"
                                       Margin="0,0,0,5"/>

                                <!-- Precio con oferta -->
                                <VerticalStackLayout Spacing="4" HorizontalOptions="Center">
                                    <Frame IsVisible="{Binding TieneDescuento}"
                                           BackgroundColor="#FF5722"
                                           Padding="8,3"
                                           CornerRadius="8"
                                           HasShadow="False"
                                           HorizontalOptions="Center">
                                        <Label Text="{Binding PorcentajeDescuento, StringFormat='-{0}%'}"
                                               FontSize="11"
                                                FontAttributes="Bold"
                                                TextColor="White"/>
                                    </Frame>
                                    <Label Text="{Binding PrecioOriginal, StringFormat='{0:C}'}"
                                           IsVisible="{Binding TieneDescuento}"
                                           FontSize="13"
                                           TextColor="#999999"
                                           TextDecorations="Strikethrough"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding Precio, StringFormat='{0:C}'}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="#512BD4"
                                           HorizontalOptions="Center"/>
                                </VerticalStackLayout>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <!-- Vista vacia -->
            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                    VerticalOptions="Center"
                                    Spacing="20">
                    <Label Text="Favoritos" 
                           FontSize="40" 
                           FontAttributes="Bold"
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label Text="Sin favoritos" 
                           FontSize="20" 
                           TextColor="Gray" 
                           HorizontalOptions="Center"/>
                    <Label Text="Marca productos como favoritos para encontrarlos rapidamente" 
                           FontSize="16" 
                           TextColor="Gray" 
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           Margin="20,0"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- Botón limpiar favoritos -->
        <Button Grid.Row="1"
                Text="Limpiar Favoritos"
                Command="{Binding LimpiarFavoritosCommand}"
                IsVisible="{Binding HayFavoritos}"
                BackgroundColor="#D32F2F"
                TextColor="White"
                Margin="10"
                HeightRequest="50"
                CornerRadius="15"/>
    </Grid>
</ContentPage>
