<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CafeteriaInsti.ViewModels"
             x:DataType="viewModels:ConfirmacionPedidoViewModel"
             x:Class="CafeteriaInsti.Views.ConfirmacionPedidoPage"
             Title="Pedido Confirmado"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*,Auto" Padding="20">
        
        <!-- Contenido principal -->
        <VerticalStackLayout Grid.Row="0" 
                            VerticalOptions="Center"
                            Spacing="30">
            
            <!-- Icono de exito -->
            <Label Text="OK" 
                   FontSize="60" 
                   TextColor="#28a745"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <Label Text="Pedido Realizado" 
                   FontSize="32" 
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center"/>

            <!-- Numero de pedido -->
            <Frame BackgroundColor="#F0F0F0" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="False">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Numero de Pedido" 
                           FontSize="16" 
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                    <Label Text="{Binding NumeroPedido}" 
                           FontSize="36" 
                           FontAttributes="Bold"
                           TextColor="#512BD4"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Detalles del pedido -->
            <Frame BorderColor="#512BD4" 
                   CornerRadius="15" 
                   Padding="20"
                   HasShadow="True">
                <Grid RowDefinitions="Auto,Auto" 
                      ColumnDefinitions="*,Auto"
                      RowSpacing="15">
                    
                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Total del pedido:" 
                           FontSize="18"/>
                    <Label Grid.Row="0" Grid.Column="1"
                           Text="{Binding Total, StringFormat='{0:C}'}" 
                           FontSize="18"
                           FontAttributes="Bold"
                           TextColor="#512BD4"/>

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Articulos:" 
                           FontSize="18"/>
                    <Label Grid.Row="1" Grid.Column="1"
                           Text="{Binding CantidadItems}" 
                           FontSize="18"
                           FontAttributes="Bold"/>
                </Grid>
            </Frame>

        </VerticalStackLayout>

        <!-- Botones -->
        <VerticalStackLayout Grid.Row="1" Spacing="15">
            
            <Button Text="Compartir Pedido"
                    Command="{Binding CompartirPedidoCommand}"
                    BackgroundColor="White"
                    TextColor="#512BD4"
                    BorderColor="#512BD4"
                    BorderWidth="2"
                    HeightRequest="55"
                    CornerRadius="15"
                    FontAttributes="Bold"
                    FontSize="16"/>

            <Button Text="Volver al Menu"
                    Command="{Binding VolverAlMenuCommand}"
                    BackgroundColor="#512BD4"
                    TextColor="White"
                    HeightRequest="55"
                    CornerRadius="15"
                    FontAttributes="Bold"
                    FontSize="16"/>
            
        </VerticalStackLayout>
    </Grid>

</ContentPage>
