<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:CafeteriaInsti.ViewModels"
             x:Class="CafeteriaInsti.Views.RegisterPage"
             x:DataType="viewModels:RegisterViewModel"
             Shell.NavBarIsVisible="False"
             Title="Registrarse">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Spacing="20" 
                                 Padding="30" 
                                 VerticalOptions="Center">

                <VerticalStackLayout Spacing="10" Margin="0,0,0,20">
                    <Label Text="游녻" 
                           FontSize="80" 
                           HorizontalOptions="Center"/>

                    <Label Text="Crear Cuenta" 
                           FontSize="32" 
                           FontAttributes="Bold"
                           TextColor="#512BD4"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"/>

                    <Label Text="칔nete a Cafeter칤a Insti" 
                           FontSize="16" 
                           TextColor="Gray"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>

                <!-- Nombre completo -->
                <Frame BackgroundColor="White" 
                       Padding="5" 
                       CornerRadius="15"
                       HasShadow="True"
                       BorderColor="Transparent">
                    <Entry Placeholder="Nombre completo"
                           Text="{Binding FullName}"
                           HeightRequest="50"
                           Margin="10,0"/>
                </Frame>

                <!-- Correo electr칩nico -->
                <Frame BackgroundColor="White" 
                       Padding="5" 
                       CornerRadius="15"
                       HasShadow="True"
                       BorderColor="Transparent">
                    <Entry Placeholder="Correo electr칩nico"
                           Text="{Binding Email}"
                           Keyboard="Email"
                           HeightRequest="50"
                           Margin="10,0"/>
                </Frame>

                <!-- Contrase침a -->
                <Frame BackgroundColor="White" 
                       Padding="5" 
                       CornerRadius="15"
                       HasShadow="True"
                       BorderColor="Transparent">
                    <Entry Placeholder="Contrase침a"
                           Text="{Binding Password}"
                           IsPassword="True"
                           HeightRequest="50"
                           Margin="10,0"/>
                </Frame>

                <!-- Confirmar contrase침a -->
                <Frame BackgroundColor="White" 
                       Padding="5" 
                       CornerRadius="15"
                       HasShadow="True"
                       BorderColor="Transparent">
                    <Entry Placeholder="Confirmar contrase침a"
                           Text="{Binding ConfirmPassword}"
                           IsPassword="True"
                           HeightRequest="50"
                           Margin="10,0"/>
                </Frame>

                <!-- Seleccionar turno -->
                <Label Text="Turno:" 
                       FontSize="14" 
                       FontAttributes="Bold"
                       TextColor="#512BD4"
                       Margin="0,5,0,0"/>
                
                <Frame BackgroundColor="White" 
                       Padding="10" 
                       CornerRadius="15"
                       HasShadow="True"
                       BorderColor="Transparent"
                       Margin="0,0,0,10">
                    <Picker SelectedItem="{Binding Turno}"
                            TextColor="Black"
                            Title="Selecciona tu turno">
                        <Picker.Items>
                            <x:String>Ma침ana</x:String>
                            <x:String>Tarde</x:String>
                        </Picker.Items>
                    </Picker>
                </Frame>

                <!-- Bot칩n registrarse -->
                <Button Text="Registrarse"
                        Command="{Binding RegisterCommand}"
                        BackgroundColor="#512BD4"
                        TextColor="White"
                        HeightRequest="60"
                        CornerRadius="15"
                        FontAttributes="Bold"
                        FontSize="18"
                        Margin="0,10,0,0" />

                <!-- Link a login -->
                <HorizontalStackLayout Spacing="5" HorizontalOptions="Center" Margin="0,10,0,0">
                    <Label Text="쯏a tienes cuenta?" TextColor="Gray" FontSize="14"/>
                    <Button Text="Inicia sesi칩n" 
                            Command="{Binding GoToLoginCommand}"
                            BackgroundColor="Transparent" 
                            TextColor="#512BD4"
                            FontAttributes="Bold"
                            Padding="0"/>
                </HorizontalStackLayout>

                <!-- Indicador de carga -->
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                  IsVisible="{Binding IsBusy}"
                                  Color="#512BD4"
                                  Margin="0,10,0,0"/>

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
